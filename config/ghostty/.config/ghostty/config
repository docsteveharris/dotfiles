# Ghostty config - minimal but sensible
# theme = "Monokai Pro"
# font-family = "Victor Mono Nerd Font"
font-family = "JuliaMono"
font-size = 14
# theme = "catppuccin-frappe"
theme = "tokyonight"

# Shell integration
shell-integration = bash
shell-integration-features = cursor,sudo,title

# Quality of life
copy-on-select = true
confirm-close-surface = false
clipboard-paste-protection = false

# https://ghostty.org/docs/config/reference#macos-option-as-alt
# values = true, false, left, and right
# setting to right else you lose access to the alternative characters on num keys
macos-option-as-alt = right


